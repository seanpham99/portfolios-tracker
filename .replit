modules = ["nodejs-20", "python-3.12", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/shared-types && pnpm run build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NestJS API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Frontend"

[[workflows.workflow]]
name = "NestJS API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/api && pnpm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Next.js Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && pnpm run dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = [
  "pnpm run start --filter @workspace/web -- --port 5000 --hostname 0.0.0.0",
]
build = ["pnpm run build --filter @workspace/web"]

[userenv]

[userenv.shared]
CORS_ORIGIN = "https://*.replit.dev,https://*.replit.app"
