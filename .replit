modules = ["nodejs-20", "python-3.12", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/shared-types && pnpm run build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Servers"

[[workflows.workflow]]
name = "Dev Servers"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && pnpm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/api && pnpm run start:dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = [
  "pnpm run start --filter @workspace/web -- --port 5000 --hostname 0.0.0.0",
]
build = ["pnpm run build --filter @workspace/web"]
