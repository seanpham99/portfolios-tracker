[run]
# Source code to measure coverage for
source = dags

# Omit these files/patterns from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    */.tox/*
    */setup.py
    */conftest.py
    */__init__.py
    */migrations/*
    # Exclude DAG orchestration files (tested via integration)
    dags/market_*.py
    dags/*_dag.py

# Run tests in parallel
parallel = True

[report]
# Precision for coverage percentage
precision = 2

# Show missing lines in report
show_missing = True

# Skip covered files in report
skip_covered = False

# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    except ImportError

[html]
directory = htmlcov

[xml]
output = coverage.xml
